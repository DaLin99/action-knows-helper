<view class="recruit-detail-container"><view class="card"><view class="workType-salary"><text>{{info.jobType}}</text><text class="salary">{{info.salary}}</text></view><view class="requiredment-tags"><block wx:for="{{educationRequirements}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="requiredment-tag"><text class="requiredment-tag-text">{{item}}</text></view></block></view><view class="skill-item-container"><block wx:for="{{skillTagLists}}" wx:for-item="skillItem" wx:for-index="index" wx:key="index"><view class="skill-item">{{''+skillItem+''}}</view></block></view><view class="update-time"><text>{{"更新于："+info.publisher+"-"+info.publishDate}}</text></view></view><view class="company _div"><view class="_p">{{"公司名："+info.company}}</view><view class="_p">{{"地点： "+info.address}}</view></view><view class="work-responsibility"><text>岗位责任</text><block wx:for="{{jobResponsibilitys}}" wx:for-item="workResItem" wx:for-index="index" wx:key="index"><view>{{''+(index+1)+". "+workResItem+''}}</view></block></view><text class="work-title">职位描述</text><view class="work-requiredments"><text>任职要求</text><block wx:for="{{jobDescriptions}}" wx:for-item="workReqItem" wx:for-index="index" wx:key="index"><view>{{''+(index+1)+". "+workReqItem+''}}</view></block></view><view class="email-box">简历投递Email：<text class="email">{{info.eMail}}</text></view><view><button class="collect-btn" type="primary" data-event-opts="{{[['tap',[['handleCollect',['$0'],['info.isCollect']]]]]}}" bindtap="__e">{{''+(info.isCollect===1?"取消收藏":"收藏")+''}}</button><button data-event-opts="{{[['tap',[['handleThumbUp',['$0'],['info.isThumbUp']]]]]}}" class="collect-btn" bindtap="__e">{{''+(info.isThumbUp===1?"取消点赞":"点赞")+''}}</button></view></view>