.recruit-detail-container {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding: 12rpx;
}
.recruit-detail-container .card {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding: 24rpx;
  color: #ffffff;
  background-color: #54cebc;
  box-shadow: 0px 10px 30px 0px rgba(0, 21, 41, 0.12);
}
.recruit-detail-container .card .workType-salary {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.recruit-detail-container .card .workType-salary .salary {
  font-weight: bolder;
}
.recruit-detail-container .card .requiredment-tags {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  font-size: 24rpx;
  line-height: 20rpx;
  margin: 24rpx 0rpx;
}
.recruit-detail-container .card .requiredment-tags .requiredment-tag {
  border-right: solid 1px #ffffff;
  padding: 0px 24rpx;
}
.recruit-detail-container .card .requiredment-tags .requiredment-tag:first-child {
  padding-left: 0px;
}
.recruit-detail-container .card .requiredment-tags .requiredment-tag:last-child {
  border: none;
}
.recruit-detail-container .card .skill-item-container {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 28rpx;
}
.recruit-detail-container .card .skill-item-container .skill-item {
  padding: 4rpx 16rpx;
  border: solid 1px #ffffff;
  border-radius: 24rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-right: 16rpx;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  margin-bottom: 16rpx;
  white-space: nowrap;
}
.recruit-detail-container .card .update-time {
  font-size: 24rpx;
}
.recruit-detail-container .email-box {
  background-color: #eafaf7;
  padding: 24rpx 36rpx;
  color: #32394d;
}
.recruit-detail-container .email-box .email {
  color: #434e6b;
}
.recruit-detail-container .company {
  margin-top: 24rpx;
}
.recruit-detail-container .work-title {
  margin: 24rpx 0rpx;
}
.recruit-detail-container .work-requiredments,
.recruit-detail-container .work-responsibility {
  color: #7e8793;
  font-size: 26rpx;
  margin-bottom: 16rpx;
  overflow: auto;
}
.recruit-detail-container .work-responsibility {
  margin-bottom: 200rpx;
}
.recruit-detail-container .btn-container {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  margin-top: 36rpx;
}
.recruit-detail-container .btn-container .collect-btn {
  background-color: #54cebc;
  border: none;
}

